<!ELEMENT daogroup (daoxml?, daocsv?, daodb?)>
<!ATTLIST daogroup
choice (xml|csv) #REQUIRED>

<!ELEMENT daoxml (path)>
<!ELEMENT daocsv (path)>
<!ELEMENT daodb (path, port, login, pass)>

<!ELEMENT path (#PCDATA)>
<!ELEMENT port (#PCDATA)>
<!ELEMENT login (#PCDATA)>
<!ELEMENT pass (#PCDATA)>


<!ELEMENT params (param*)>
<!ELEMENT param (#PCDATA)>
<!ATTLIST param
name CDATA #REQUIRED>